<% if signed_in? %>
    <hr>
    <h4>Add a comment</h4>
  <%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
      <%= f.label :title, "Title" %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :content, "Content" %><br>
      <%= f.text_area :content %>
    </p>

    <p>
      <%= f.submit "Submit" %>
    </p>
  <% end %>
    <hr>
<% end %>