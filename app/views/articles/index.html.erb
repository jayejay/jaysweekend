<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table class="table">
  <thead>
    <tr>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td>
          <a href="<%= article_path article.id %>" class="article-show">
            <h3><%= article.title %></h3>
          </a>
          <br>
          <%= article.content %> <br><br>
          <small>by <%= article.user.name + ' ' + article.user.surname %></small>
          <br><br>

          <%= link_to 'Edit', edit_article_path(article), class: "btn btn-sm btn-info" %>
          <%= link_to 'Destroy', article, class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, class: "btn btn-info" %>
