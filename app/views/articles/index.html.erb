<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Article</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td>
          <h3><%= article.title %></h3><br>
          <%= article.content %> <br>
          by <%= article.user.name + ' ' + article.user.surname %>
          <br><br>
          <%= link_to 'Show', article, class: "btn btn-sm btn-default"  %>
          <%= link_to 'Edit', edit_article_path(article), class: "btn btn-sm btn-info" %>
          <%= link_to 'Destroy', article, class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, class: "btn btn-info" %>
